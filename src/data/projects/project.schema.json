{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/umsi211/project.schema.json",
  "title": "UMSI 211 Project",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "studentName",
    "projectTitle",
    "description",
    "projectType"
  ],
  "properties": {
    "studentName": { "type": "string", "minLength": 2 },
    "projectTitle": { "type": "string", "minLength": 2 },
    "description": { "type": "string", "minLength": 10 },
    "projectType": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "Web App",
          "Data Visualization",
          "Simulation",
          "API/Backend",
          "Mobile App",
          "Other"
        ]
      }
    },
    "projectUrl": { "type": "string", "format": "uri" },
    "githubUrl": { "type": "string", "format": "uri" },
    "projectImage": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "reflections": { "type": "string" },
    "studentPhoto": { "type": "string" },
    "videoUrl": { "type": "string", "format": "uri" }
  }
}
